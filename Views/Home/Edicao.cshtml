@model Agenda_Telefonica.Models.Contato

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
    <h2>Alterar dados</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Atualizar" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ID" class="control-label"></label>
                    <input asp-for="ID" class="form-control" />
                    <span asp-validation-for="ID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Apelido" class="control-label"></label>
                    <input asp-for="Apelido" class="form-control" />
                    <span asp-validation-for="Apelido" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Telefone_Residencial" class="control-label"></label>
                    <input asp-for="Telefone_Residencial" class="form-control" />
                    <span asp-validation-for="Telefone_Residencial" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Telefone_Celular" class="control-label"></label>
                    <input asp-for="Telefone_Celular" class="form-control" />
                    <span asp-validation-for="Telefone_Celular" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Telefone_Comercial" class="control-label"></label>
                    <input asp-for="Telefone_Comercial" class="form-control" />
                    <span asp-validation-for="Telefone_Comercial" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Atualizar" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="ListaContatos">Retornar para a Lista</a>
    </div>